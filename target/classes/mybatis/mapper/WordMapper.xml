<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!--namespace：绑定一个对应的Dao/Mapper接口-->
<mapper namespace="com.chun.myspringboot.dao.WordMapper">

<!--
############################################################
               关于四级的操作
############################################################
-->


    <!--增加一个已认识的的单词-->
    <update id="addWordCet4Remember" parameterType="int" >
        update studywords.cet4 set remember=1 where wordId=#{wordId}
    </update>
    <!--删除一个已认识的单词 -->
    <update id="deleteCet4Remember" parameterType="int" >
        update studywords.cet4 set remember=0 where wordId=#{wordId}
    </update>
    <!--删除所有认识的单词-->
    <update id="deleteAllCet4Remember" parameterType="int">
        update studywords.cet4 set remember=0 where remember=1
    </update>


    <!-- 查询所有Cet4单词-->
    <select id="queryAllWordCet4" resultType="Cet4">
        select * from studywords.cet4
    </select>


    <!--根据Id查询一个Cet4单词-->
    <select id="queryWordCet4ById" resultType="Cet4">
        select * from studywords.cet4 where wordId=#{wordId}
    </select>
    <!--查询四级单词的数量-->
    <select id="queryWordCet4Number" resultType="int">
        SELECT COUNT(wordId) FROM cet4;
    </select>
    <!--查询四级已会单词的数量-->
    <select id="queryWordCet4RememberNumber" resultType="int">
        select count(remember) from cet4 where remember=1
    </select>
    <!--查询四级不会的单词-->
    <select id="queryWordCet4Unable" resultType="Cet4">
        SELECT * FROM cet4 where remember=0 ORDER BY RAND() limit 1
    </select>
    <!--把单词加入收藏夹-->
    <update id="addCollection" parameterType="int">
       update studywords.cet4 set collection=1 where wordId=#{wordId}
    </update>
    <!--把单词移除收藏夹-->
    <update id="deleteCollection" parameterType="int">
       update studywords.cet4 set collection=0 where wordId=#{wordId}
    </update>

<!--
############################################################
               关于六级的操作
############################################################
-->
